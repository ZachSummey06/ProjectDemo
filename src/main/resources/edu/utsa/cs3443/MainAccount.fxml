<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.utsa.cs3443.projectdemo.MainAccountController">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- profile picture -->
            <ImageView fx:id="profileImageView"
                       fitWidth="150"
                       preserveRatio="true"/>

            <!-- basic user info -->
            <GridPane hgap="10" vgap="10">
                <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="firstNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="lastNameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="usernameLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="passwordLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Favorite Song:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label fx:id="favoriteSongLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- listen list title -->
            <Label text="Listen List:"/>

            <!-- listen list -->
            <ListView fx:id="ListenListView"
                      prefWidth="300"
                      prefHeight="200"/>
        </VBox>
    </center>

</BorderPane>
