<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.utsa.cs3443.projectdemo.controller.LoginController"
      style="-fx-background-color: linear-gradient(to bottom right, #0c2340, #000000);">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome Back"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"/>

    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Username"
               style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
        <TextField fx:id="usernameField" promptText="Enter your username"
                   style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa; -fx-background-radius: 5; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 5; -fx-padding: 10;"/>
    </VBox>

    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Password"
               style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"
                       style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa; -fx-background-radius: 5; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 5; -fx-padding: 10;"/>
    </VBox>

    <Button text="Login" onAction="#handleSignInButtonAction" maxWidth="Infinity"
            style="-fx-background-color: #f0a70a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 10 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>

    <Button text="Sign Up" onAction="#goToSignUp" maxWidth="Infinity"
            style="-fx-background-color: transparent; -fx-text-fill: #f0a70a; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 20; -fx-border-color: #f0a70a; -fx-border-width: 2; -fx-border-radius: 20; -fx-padding: 10 20; -fx-cursor: hand;"/>

    <Label fx:id="messageLabel"
           style="-fx-font-size: 12px;"/>
</VBox>