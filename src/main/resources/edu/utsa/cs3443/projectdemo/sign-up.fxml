<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.utsa.cs3443.projectdemo.SignUpController"
      style="-fx-background-color: linear-gradient(to bottom right, #0c2340, #000000);">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>
    <Label text="Create Account"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"/>
    <Label text="Join us today!"
           style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;"/>
    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="First Name"
               style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
        <TextField fx:id="firstNametextField" promptText="Enter your first name"
                   style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa; -fx-background-radius: 5; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 5; -fx-padding: 10;"/>
    </VBox>
    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Last Name"
               style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
        <TextField fx:id="lastNameTextField" promptText="Enter your last name"
                   style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa; -fx-background-radius: 5; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 5; -fx-padding: 10;"/>
    </VBox>
    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Username"
               style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
        <TextField fx:id="usernameTextField" promptText="Choose a username"
                   style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa; -fx-background-radius: 5; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 5; -fx-padding: 10;"/>
    </VBox>
    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Password"
               style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
        <PasswordField fx:id="enterPasswordTextField" promptText="Enter password"
                       style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa; -fx-background-radius: 5; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 5; -fx-padding: 10;"/>
    </VBox>
    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Confirm Password"
               style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px;"/>
        <PasswordField fx:id="confirmPasswordTextField" promptText="Re-enter password"
                       style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa; -fx-background-radius: 5; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 5; -fx-padding: 10;"/>
    </VBox>
    <Button fx:id="signUpButton" text="Sign Up" onAction="#confirmSignUp" maxWidth="Infinity"
            style="-fx-background-color: #f0a70a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 10 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
    <Label text="Already have an account? Log in"
           style="-fx-text-fill: #f0a70a; -fx-font-size: 12px; -fx-cursor: hand; -fx-underline: true;"/>
</VBox>