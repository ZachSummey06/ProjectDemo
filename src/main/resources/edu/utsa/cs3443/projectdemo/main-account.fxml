<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.utsa.cs3443.projectdemo.MainAccountController"
      style="-fx-background-color: linear-gradient(to bottom right, #0c2340, #000000);">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <!-- Profile Header -->
    <VBox alignment="CENTER" spacing="15.0">
        <!-- Profile Image -->
        <ImageView fx:id="profileImageView" fitHeight="120.0" fitWidth="120.0" preserveRatio="true"
                   style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 15, 0, 0, 0);">
        </ImageView>

        <!-- User Info Card -->
        <VBox alignment="CENTER" spacing="8.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.08); -fx-background-radius: 15; -fx-padding: 20; -fx-border-color: rgba(255, 255, 255, 0.2); -fx-border-radius: 15; -fx-border-width: 1;">

            <Label text="Profile Information"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #f0a70a;"/>

            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Name:"
                       style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="firstNameLabel" text="First"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <Label fx:id="lastNameLabel" text="Last"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Username:"
                       style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="usernameLabel" text="username"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Password:"
                       style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="passwordLabel" text="********"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- Listen List Section -->
    <VBox spacing="12.0" style="-fx-background-color: rgba(255, 255, 255, 0.08); -fx-background-radius: 15; -fx-padding: 20; -fx-border-color: rgba(255, 255, 255, 0.2); -fx-border-radius: 15; -fx-border-width: 1;">
        <Label fx:id="favoriteSongLabel" text="Listen List"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #f0a70a;"/>

        <ListView fx:id="listeningListView" prefHeight="150.0"
                  style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-background-radius: 8; -fx-border-color: rgba(255, 255, 255, 0.1); -fx-border-radius: 8; -fx-border-width: 1;">
        </ListView>
    </VBox>

    <!-- Action Button -->
    <Button text="Rate a Song" onAction="#handleRateSong" maxWidth="Infinity"
            style="-fx-background-color: #f0a70a; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 20; -fx-padding: 12 30; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 3);"/>
</VBox>
