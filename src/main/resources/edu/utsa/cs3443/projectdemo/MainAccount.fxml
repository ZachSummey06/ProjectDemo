<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.projectdemo.MainAccountController">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- profile picture -->
            <ImageView fx:id="profileImageView" fitWidth="150" preserveRatio="true" />

            <!-- basic user info -->
            <GridPane hgap="10" vgap="10">
                <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="firstNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="lastNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label fx:id="passwordLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Favorite Song:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <Label fx:id="favoriteSongLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- listen list title -->
            <Label text="Listen List:"/>
         <Button mnemonicParsing="false" text="Rate Song!"
                 onAction="#handleRateSong"/>

            <!-- listen list -->
            <ListView fx:id="listeningListView" prefHeight="200" prefWidth="300" />
        </VBox>
    </center>

</BorderPane>
