<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.utsa.cs3443.projectdemo.RatingController">

    <!-- Top Section: Title -->
    <top>
        <VBox alignment="CENTER" spacing="10" styleClass="header">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
            <Label text="Song Rating Manager" styleClass="title">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>
            <Separator/>
        </VBox>
    </top>

    <!-- Center Section: Rating Form and Table -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <!-- Add Rating Form -->
            <VBox spacing="15" styleClass="form-section">
                <Label text="Add New Rating">
                    <font>
                        <Font name="System Bold" size="18"/>
                    </font>
                </Label>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="usernameField" promptText="Enter username"
                               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Song Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="songNameField" promptText="Enter song name"
                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Album Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="albumNameField" promptText="Enter album name"
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label style="-fx-text-fill: #0c2340; -fx-font-weight: bold;" text="Rating (1-5):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <Spinner fx:id="ratingSpinner" editable="true" initialValue="5" max="5" min="1" style="-fx-border-color: #f0a70a; -fx-border-width: 1; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="5" max="5" min="1" />
                        </valueFactory>
                    </Spinner>

                    <Label style="-fx-text-fill: #0c2340; -fx-font-weight: bold;" text="Comments:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextArea fx:id="commentsArea" prefRowCount="3" promptText="Enter comments (optional)" style="-fx-border-color: #f0a70a; -fx-border-width: 1; -fx-border-radius: 5;" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button onAction="#handleAddRating" style="-fx-background-color: #f0a70a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;" text="Add Rating">
                        <font>
                            <Font size="14" />
                        </font>
                    </Button>
                    <Button onAction="#handleClearForm" style="-fx-background-color: #0c2340; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" text="Clear Form">
                        <font>
                            <Font size="14" />
                        </font>
                    </Button>
                    <Label fx:id="statusLabel" style="-fx-text-fill: #0c2340; -fx-font-weight: bold;" text="">
                        <font>
                            <Font size="12" />
                        </font>
                    </Label>
                </HBox>
            </VBox>

            <Separator style="-fx-background-color: #f0a70a;" />

            <!-- Ratings Table -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label style="-fx-text-fill: #0c2340; -fx-font-weight: bold;" text="All Ratings">
                    <font>
                        <Font size="20" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <TextField fx:id="searchField" prefWidth="200" promptText="Search by username..." style="-fx-border-color: #f0a70a; -fx-border-width: 1; -fx-border-radius: 5;" />
                    <Button onAction="#handleSearchUser" style="-fx-background-color: #f0a70a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Search" />
                    <Button onAction="#handleShowAll" style="-fx-background-color: #0c2340; -fx-text-fill: white; -fx-background-radius: 5;" text="Show All" />
                    <Button onAction="#handleRefresh" style="-fx-background-color: #0c2340; -fx-text-fill: white; -fx-background-radius: 5;" text="Refresh" />
                </HBox>

                <TableView fx:id="ratingsTable" style="-fx-border-color: #f0a70a; -fx-border-width: 2; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="usernameColumn" prefWidth="100" style="-fx-background-color: #0c2340; -fx-text-fill: white;" text="Username" />
                        <TableColumn fx:id="songColumn" prefWidth="150" style="-fx-background-color: #0c2340; -fx-text-fill: white;" text="Song" />
                        <TableColumn fx:id="albumColumn" prefWidth="150" style="-fx-background-color: #0c2340; -fx-text-fill: white;" text="Album" />
                        <TableColumn fx:id="artistColumn" prefWidth="120" style="-fx-background-color: #0c2340; -fx-text-fill: white;" text="Artist" />
                        <TableColumn fx:id="ratingColumn" prefWidth="70" style="-fx-background-color: #0c2340; -fx-text-fill: white;" text="Rating" />
                        <TableColumn fx:id="commentsColumn" prefWidth="200" style="-fx-background-color: #0c2340; -fx-text-fill: white;" text="Comments" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom Section: Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #0c2340; -fx-padding: 10 20;">
            <Label fx:id="recordCountLabel" style="-fx-text-fill: #f0a70a; -fx-font-weight: bold;" text="Total Ratings: 0">
                <font>
                    <Font size="14" />
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>
